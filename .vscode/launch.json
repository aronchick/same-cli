    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch test package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}"
        },
        {
            "name": "Launch sample file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/experimental/sample.go"
        },
        {
            "name": "Debug file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Build and run 'create'",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/main.go",
            "envFile": "${workspaceRoot}/.env",
            "args": [
                "create"
            ],
            "showLog": true,
            // "trace": false,
            // "logOutput": "rpc"
        },
        {
            "name": "Test Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${file}",
            "env": {},
            "args": [],
            "showLog": true
        }
    ]
}